        /// metodo para pasar los datos mediante el ID del contacto y mostrarlos en el modal de editar
        $(document).ready(function () {
            // Código de inicialización de DataTable...

            $('#ModalEditar').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Botón que activó el modal
                var modal = $(this);

                modal.find('input[name="Id"]').val(button.data('id'));
                modal.find('input[name="Nombre"]').val(button.data('nombre'));
                modal.find('input[name="Telefono"]').val(button.data('telefono'));
                modal.find('input[name="Celular"]').val(button.data('celular'));
                modal.find('input[name="Email"]').val(button.data('email'));
            });
        });

        ///metodo para activar la validacion de campos vacios del Modal Editar
        $(document).ready(function () {
            $('#ModalEditar form').submit(function (event) {
                var form = $(this);
                var fields = form.find('input[data-val="true"]');
                var isValid = true;

                fields.each(function () {
                    var input = $(this);
                    if (!input.val()) {
                        isValid = false;
                        input.addClass('is-invalid');
                    } else {
                        input.removeClass('is-invalid');
                    }
                });

                if (!isValid) {
                    event.preventDefault();
                }
            });
        });

        ///metodo para mostrar los datos mediante el ID del contacto para mostrarlos en el Modal Detalles
        $('#ModalDetalles').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Botón que activó el modal
            var nombre = button.data('nombre');
            var telefono = button.data('telefono');
            var celular = button.data('celular');
            var email = button.data('email');
            var fecha = button.data('fecha');

            $('#detalle-nombre').text(nombre);
            $('#detalle-telefono').text(telefono);
            $('#detalle-celular').text(celular);
            $('#detalle-email').text(email);
            $('#detalle-fecha').text(fecha);
        });

        ///Metodo para eliminar el contacto se muestran los datos buscando por ID y se elimina por el ID
        $('#ModalEliminar').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Botón que activó el modal
            var id = button.data('id');
            var nombre = button.data('nombre');
            var telefono = button.data('telefono');
            var celular = button.data('celular');
            var email = button.data('email');

            // Llena los campos del modal
            $('#eliminar-nombre').val(nombre);
            $('#eliminar-telefono').val(telefono);
            $('#eliminar-celular').val(celular);
            $('#eliminar-email').val(email);

            // Asigna el valor del ID al campo oculto
            $('input[name="Id"]').val(id);
        });




    </script>
