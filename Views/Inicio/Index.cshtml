@model IEnumerable<CrudASP.Models.Contacto>

@{
    ViewData["Title"] = "Lista de Contactos";
}
<link rel="stylesheet" href="~/css/EstilosPersonalizados.css" asp-append-version="true" />

<div class="bodyAgenda">

    <div class="container-fluid Espacio">
        <img class=" col-4  CardBodyPersonalizada ImagenP" src="https://cdn-icons-png.flaticon.com/512/1802/1802667.png" alt="Logo">
        <div class="text-center">
            <h1 class="text-center">Contactos en INA Upala ASP.Net Core 7</h1>
        </div>
        <a style="border-radius: 10px" asp-action="Crear" asp-controller="Inicio" class="btn btn-outline-primary  btn-sm boton-efecto">
            <svg style="margin-right: 5px;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
            </svg>
            Nuevo Conatcto
        </a>

    </div>

    <div class="row">
        <div class="offser-12 BorderRadios">
            <div class="card border CardBodyPersonalizada">
                <div class="card-header cardHeaderPersonalisada">
                    <h3 class="textocolor">
                        <strong>
                            Lista de Usuarios
                        </strong>
                    </h3>
                </div>
                <div class=" card-body bodyAgenda">
                    <div class="table-responsive">
                        @if (Model.Count() > 0)
                        {
                            <table class="table tables table-bordered  " id="tbUsuarios" width="100%" cellspacing="0">
                                <thead>
                                    <tr class="text-white">
                                        <th>@Html.DisplayNameFor(m => m.Id)</th>
                                        <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                        <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                        <th>@Html.DisplayNameFor(m => m.Celular)</th>
                                        <th>@Html.DisplayNameFor(m => m.Email)</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(m => item.Id)</td>
                                            <td>@Html.DisplayFor(m => item.Nombre)</td>
                                            <td>@Html.DisplayFor(m => item.Telefono)</td>
                                            <td>@Html.DisplayFor(m => item.Celular)</td>
                                            <td>@Html.DisplayFor(m => item.Email)</td>
                                            <td>
                                                <button style="border-radius: 10px; margin-right: 10px; margin-left: 10px; " type="button" class="btn btn-outline-warning btn-sm" data-bs-toggle="modal" data-bs-target="#ModalEditar" asp-action="Editar" asp-controller="Inicio"
                                                        data-id="@item.Id"
                                                        data-nombre="@item.Nombre"
                                                        data-telefono="@item.Telefono"
                                                        data-celular="@item.Celular"
                                                        data-email="@item.Email">
                                                    <svg style="margin-right: 5px;" xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                                    </svg>
                                                    Editar
                                                </button>
                                                <button style="border-radius: 10px; margin-right: 10px; margin-left: 10px; " type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#ModalDetalles" asp-action="Detalle" asp-controller="Inicio" asp-route-id="@item.Id"
                                                        data-nombre="@item.Nombre"
                                                        data-telefono="@item.Telefono"
                                                        data-celular="@item.Celular"
                                                        data-email="@item.Email"
                                                        data-fecha="@item.FechaCreacion">
                                                    <svg style="margin-right: 5px;" xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-info-square" viewBox="0 0 16 16">
                                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                                        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                                                    </svg>
                                                    Detalle
                                                </button>
                                                <button style="border-radius: 10px; margin-right: 10px; margin-left: 10px; " type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#ModalEliminar" asp-action="Eliminar" asp-controller="Inicio" asp-route-id="@item.Id"
                                                        data-id="@item.Id"
                                                        data-nombre="@item.Nombre"
                                                        data-telefono="@item.Telefono"
                                                        data-celular="@item.Celular"
                                                        data-email="@item.Email">
                                                    <svg style="margin-right: 5px;" xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                                                    </svg>
                                                    Eliminar
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p> No existen registros</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
